" ~/.vimrc: Vim configuration file

" Enable line numbers
set number

" Enable relative line numbers (optional, useful for navigation)
" Uncomment the line below if you prefer relative numbers
" set relativenumber

" Enable syntax highlighting
syntax on

" Show matching brackets
set showmatch

" Enable auto-indentation
set autoindent
set smartindent

" Set tab width to 4 spaces
set tabstop=4
set shiftwidth=4
set expandtab

" Enable search highlighting
set hlsearch
set incsearch

" Ignore case in searches unless uppercase is used
set ignorecase
set smartcase

" Show command in bottom bar
set showcmd

" Enable wildmenu for command completion
set wildmenu

" Set encoding
set encoding=utf-8
